    <a id="logout" href="#" class="me-3" style="float: right;">로그아웃</a> 
    <a id="mypage" href="/users/mypage" class="me-3" style="float: right;">마이페이지</a>
    <hr>
</div>

<script>
    const email = sessionStorage.getItem("email"); // login.ejs에서 setItemd으로 넣어준 값 가져옴. 
    const uid = sessionStorage.getItem("uid");
    
    if(email){ // 값이 있을 때 -> 로그인 상태
        $("#login").hide();
        $("#mypage, #logout, #cart" ).show();
        $("#mypage").html(email);

    }else { // 값이 없을 때 -> 로그아웃
        $("#login").show();
        $("#mypage, #logout, #cart").hide();
    }

    $("#logout").on("click", function(e){
        e.preventDefault();
        if(confirm("로그아웃 하시겠습니까 ?")){
            sessionStorage.clear();
            location.href="/";
        }
    })
</script>